{
  "swagger": "2.0",
  "info": {
    "description": "This is the API definition for the Smart NFTs final proyect.",
    "version": "1.0.0",
    "title": "Smart NFTs API",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "ghirsch@itba.edu.ar"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "api.smart-nfts.gonzalohirsch.com",
  "basePath": "/",
  "tags": [
    {
      "name": "Contracts",
      "description": "/contracts endpoints"
    },
    {
      "name": "Misc",
      "description": "Other endpoints"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/contracts": {
      "post": {
        "tags": [
          "Contracts"
        ],
        "summary": "Create a new contract",
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "$ref": "#/components/schemas/ID"
                },
                "_id": {
                  "$ref": "#/components/schemas/_ID"
                },
                "abi": {
                  "$ref": "#/components/schemas/ABI"
                }
              }
            }
          }
        }
      }
    },
    "/contracts/{contractId}": {
      "get": {
        "tags": [
          "Contracts"
        ],
        "summary": "Recover a contract by ID",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/idParameter"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/components/schemas/COMPLETE_CONTRACT"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Contracts"
        ],
        "summary": "Edit a contract",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/idParameter"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/components/schemas/COMPLETE_CONTRACT"
            }
          }
        }
      }
    },
    "/contracts/{contractId}/deploy": {
      "post": {
        "tags": [
          "Contracts"
        ],
        "summary": "Deploy a contract to a testnet",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/idParameter"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "address": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/contracts/{contractId}/verify": {
      "post": {
        "tags": [
          "Contracts"
        ],
        "summary": "Verify a contract in a testnet",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/idParameter"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "verificationId": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": [
          "Misc"
        ],
        "summary": "Health check to determine if the API is working",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ABI": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "stateMutability": {
              "type": "string"
            },
            "anonymous": {
              "type": "boolean"
            },
            "inputs": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  },
                  "indexed": {
                    "type": "boolean"
                  },
                  "internalType": {
                    "type": "string"
                  }
                }
              }
            },
            "outputs": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  },
                  "internalType": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "ID": {
        "type": "string"
      },
      "_ID": {
        "type": "string"
      },
      "CONTRACT": {
        "type": "string"
      },
      "NAME": {
        "type": "string"
      },
      "SYMBOL": {
        "type": "string"
      },
      "EXTENSIONS": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "Pausable",
            "Mintable",
            "AutoIncrementIds",
            "Burnable"
          ]
        }
      },
      "COMPLETE_CONTRACT": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/ID"
          },
          "_id": {
            "$ref": "#/components/schemas/_ID"
          },
          "abi": {
            "$ref": "#/components/schemas/ABI"
          },
          "contract": {
            "$ref": "#/components/schemas/CONTRACT"
          },
          "name": {
            "$ref": "#/components/schemas/NAME"
          },
          "symbol": {
            "$ref": "#/components/schemas/SYMBOL"
          },
          "extensions": {
            "$ref": "#/components/schemas/EXTENSIONS"
          }
        }
      }
    }
  },
  "parameters": {
    "idParameter": {
      "in": "path",
      "name": "contractId",
      "type": "string",
      "required": "true",
      "description": "ID of the contract"
    }
  }
}